{
  "log": "/tmp/environment.log",
  "sensor_type": 22,
  "pin": 4,
  "units": "fahrenheit",
  "period": 0.5,
  "mqtt": {
    "client_id": "pi_media",
    "topics": {
      "hass/pytest/env": {
        "pubsub": "publish",
        "payload": {
          "temperature": "{:0.2f}",
          "humidity": "{:0.2f}",
          "units": ""
        }
      }
    }
  }
}